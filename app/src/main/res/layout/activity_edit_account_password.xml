<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_account_password">

    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/watermark_background" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/settings"
        android:textColor="#414042"
        app:layout_constraintBottom_toBottomOf="@+id/back_button4"
        app:layout_constraintStart_toEndOf="@+id/back_button4"
        app:layout_constraintTop_toTopOf="@+id/back_button4" />

    <ImageButton
        android:id="@+id/back_button4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:importantForAccessibility="no"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left_arrow"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/change_password"
        android:textColor="@android:color/black"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/current_password"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/current_password_input"
        app:layout_constraintTop_toBottomOf="@+id/change_password" />

    <ImageView
        android:id="@+id/textbox_current_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:srcCompat="@drawable/text_input_box"
        tools:ignore="ImageContrastCheck" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/current_password_input"
        android:layout_width="291dp"
        android:layout_height="43dp"
        android:fontFamily="@font/open_sans"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textColorHint="#414042"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textbox_current_password"
        app:layout_constraintEnd_toEndOf="@+id/textbox_current_password"
        app:layout_constraintStart_toStartOf="@+id/textbox_current_password"
        app:layout_constraintTop_toTopOf="@+id/textbox_current_password"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/textbox_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_password"
        app:srcCompat="@drawable/text_input_box"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/new_password"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/current_password_input3"
        app:layout_constraintTop_toBottomOf="@+id/textbox_current_password" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/current_password_input3"
        android:layout_width="291dp"
        android:layout_height="43dp"
        android:fontFamily="@font/open_sans"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textColorHint="#414042"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textbox_new_password"
        app:layout_constraintEnd_toEndOf="@+id/textbox_new_password"
        app:layout_constraintStart_toStartOf="@+id/textbox_new_password"
        app:layout_constraintTop_toTopOf="@+id/textbox_new_password"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/textbox_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password"
        app:srcCompat="@drawable/text_input_box"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/confirm_password_no_cap"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/confirm_password_input"
        app:layout_constraintTop_toBottomOf="@+id/textbox_new_password" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/confirm_password_input"
        android:layout_width="291dp"
        android:layout_height="43dp"
        android:fontFamily="@font/open_sans"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textColorHint="#414042"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textbox_confirm_password"
        app:layout_constraintEnd_toEndOf="@+id/textbox_confirm_password"
        app:layout_constraintStart_toStartOf="@+id/textbox_confirm_password"
        app:layout_constraintTop_toTopOf="@+id/textbox_confirm_password"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/save_password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="250dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/save_button"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>